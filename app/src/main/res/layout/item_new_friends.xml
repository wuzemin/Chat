<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.min.mylibrary.widget.image.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/default_portrait"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:id="@+id/civ_icon" />

    <TextView
        android:layout_marginTop="5dp"
        android:text="@string/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/civ_icon"
        android:layout_toRightOf="@+id/civ_icon"
        android:layout_toEndOf="@+id/civ_icon"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/tv_nickname" />

    <TextView
        android:layout_marginBottom="5dp"
        android:text="@string/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/civ_icon"
        android:layout_alignLeft="@+id/tv_nickname"
        android:layout_alignStart="@+id/tv_nickname"
        android:id="@+id/textView5" />

    <TextView
        android:text="@string/agree"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:id="@+id/btn_agree"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:visibility="gone"
        android:textColor="@color/blue"
        android:layout_marginRight="10dp"
        android:text="@string/refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_agree"
        android:layout_toLeftOf="@+id/btn_agree"
        android:layout_toStartOf="@+id/btn_agree"
        android:id="@+id/tv_refuse" />

    <TextView
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:textColor="@color/blue"
        android:text="@string/ignore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_refuse"
        android:layout_toLeftOf="@+id/tv_refuse"
        android:layout_toStartOf="@+id/tv_refuse"
        android:id="@+id/tv_ignore" />
</RelativeLayout>